    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        // נתונים מגיליון גוגל
        const neighborhoods = {
            "ארמון הנציב - תלפ\"ז": "https://chat.whatsapp.com/LSuPKdLjd5qJ2NRI7EpAlf",
            "ארנונה": "https://chat.whatsapp.com/Ki3t3Q9OjtQFkbYn0H225R",
            "בית הכרם": "https://chat.whatsapp.com/KBkxQuvRwpOC62obYhYG81",
            // וכן הלאה...
        };

        const search = document.getElementById('neighborhood-search');
        const button = document.getElementById('whatsapp-button');
        const whatsappLink = button.querySelector('a');
        
        search.addEventListener('input', function() {
            const value = this.value.trim();
            const matchedNeighborhood = Object.keys(neighborhoods).find(n => 
                n.includes(value) && value.length > 1
            );
            
            if (matchedNeighborhood) {
                whatsappLink.href = neighborhoods[matchedNeighborhood];
                button.style.display = 'block';
            } else {
                button.style.display = 'none';
            }
        });
    </script>
